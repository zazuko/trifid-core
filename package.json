{
  "name": "trifid-core",
  "description": "Trifid Core",
  "type": "module",
  "version": "2.0.0-alpha.5",
  "license": "MIT",
  "homepage": "https://github.com/zazuko/trifid-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/zazuko/trifid-core.git"
  },
  "bugs": {
    "url": "https://github.com/zazuko/trifid-core/issues"
  },
  "scripts": {
    "test": "standard && node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "nodemon server.js",
    "typings": "tsc",
    "clean": "rimraf *.tgz *.d.ts* lib/*.d.ts* lib/**/*.d.ts* middlewares/*.d.ts* middlewares/**/*.d.ts*",
    "prepack": "npm run clean && npm run typings"
  },
  "types": "./index.d.ts",
  "bin": {
    "trifid-core": "./server.js"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "commander": "^9.3.0",
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "json5": "^2.2.1",
    "lodash": "^4.17.21",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "vhost": "^3.0.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "babel-jest": "^28.1.2",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "standard": "^17.0.0",
    "supertest": "^6.2.4",
    "typescript": "^4.7.4"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
