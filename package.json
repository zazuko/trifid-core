{
  "name": "trifid-core",
  "description": "Trifid Core",
  "type": "module",
  "version": "2.3.0",
  "license": "MIT",
  "homepage": "https://github.com/zazuko/trifid-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/zazuko/trifid-core.git"
  },
  "bugs": {
    "url": "https://github.com/zazuko/trifid-core/issues"
  },
  "scripts": {
    "test": "standard && node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "nodemon server.js",
    "typings": "tsc",
    "clean": "rimraf *.tgz *.d.ts* lib/*.d.ts* lib/**/*.d.ts* middlewares/*.d.ts* middlewares/**/*.d.ts*",
    "prepack": "npm run clean && npm run typings",
    "postpublish": "npm run clean"
  },
  "main": "index.js",
  "types": "./index.d.ts",
  "bin": {
    "trifid-core": "./server.js"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "absolute-url": "^1.2.2",
    "ajv": "^8.11.2",
    "camouflage-rewrite": "^1.4.0",
    "commander": "^9.4.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "json5": "^2.2.1",
    "lodash": "^4.17.21",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "vhost": "^3.0.2",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "standard": "^17.0.0",
    "supertest": "^6.3.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
